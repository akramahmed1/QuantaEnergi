# QuantaEnergi Production Environment Configuration
# Post-Phase 3: Production Readiness & Market Launch
# Copy this file to .env.production and update with your actual values

# Application Settings
APP_NAME=QuantaEnergi
APP_VERSION=4.0.0
APP_ENV=production
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security Settings
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/quantaenergi_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Settings
REDIS_URL=redis://hostname:6379
REDIS_POOL_SIZE=10
REDIS_DB=0

# Monitoring Settings
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ELK_ENABLED=true
SENTRY_ENABLED=true

# External APIs
BLOOMBERG_API_KEY=your-bloomberg-api-key-here
VERRA_API_KEY=your-verra-api-key-here
GOLD_STANDARD_API_KEY=your-gold-standard-api-key-here

# Blockchain Settings (Ethereum)
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key-here

# Quantum Computing
QUANTUM_BACKEND=dwave
DWAVE_API_TOKEN=your-dwave-api-token-here
DWAVE_SOLVER=Advantage_system6.4

# AI/ML Settings
TORCH_DEVICE=cuda
TRANSFORMERS_CACHE_DIR=./models
MODEL_UPDATE_FREQUENCY=3600

# IoT Settings (MQTT)
MQTT_BROKER=your-mqtt-broker-hostname
MQTT_PORT=1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/quantaenergi/app.log

# CORS Settings
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Performance Settings
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
RESPONSE_CACHE_TTL=300

# Compliance Settings
ISLAMIC_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
SOC2_COMPLIANCE_ENABLED=true

# Market Settings
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
TRADING_HOURS_START=00:00
TRADING_HOURS_END=23:59

# Notification Settings
EMAIL_ENABLED=true
SMS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# AWS Settings (if using AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=quantaenergi-backups

# Kubernetes Settings (if using K8s)
KUBERNETES_NAMESPACE=quantaenergi
KUBERNETES_SERVICE_ACCOUNT=quantaenergi-sa

# Load Balancer Settings
LOAD_BALANCER_HOSTNAME=api.yourdomain.com
LOAD_BALANCER_SSL_CERT=/etc/ssl/certs/quantaenergi.crt
LOAD_BALANCER_SSL_KEY=/etc/ssl/private/quantaenergi.key

# CDN Settings
CDN_ENABLED=true
CDN_PROVIDER=cloudflare
CDN_ZONE_ID=your-cloudflare-zone-id
CDN_API_TOKEN=your-cloudflare-api-token

# SSL/TLS Settings
SSL_ENABLED=true
SSL_CERT_FILE=/etc/ssl/certs/quantaenergi.crt
SSL_KEY_FILE=/etc/ssl/private/quantaenergi.key
SSL_CA_FILE=/etc/ssl/certs/ca-bundle.crt

# Health Check Settings
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics Settings
METRICS_ENDPOINT=/metrics
METRICS_COLLECTION_INTERVAL=15
METRICS_RETENTION_DAYS=90

# Alerting Settings
ALERTING_ENABLED=true
ALERTING_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
ALERTING_EMAIL=alerts@yourdomain.com

# Database Backup Settings
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_S3_BUCKET=quantaenergi-db-backups

# Redis Backup Settings
REDIS_BACKUP_ENABLED=true
REDIS_BACKUP_SCHEDULE=0 3 * * *
REDIS_BACKUP_RETENTION_DAYS=7
REDIS_BACKUP_S3_BUCKET=quantaenergi-redis-backups

# Log Rotation Settings
LOG_ROTATION_ENABLED=true
LOG_ROTATION_MAX_SIZE=100MB
LOG_ROTATION_MAX_FILES=10
LOG_ROTATION_COMPRESS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_HSTS_MAX_AGE=31536000
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=default-src 'self'
SECURITY_HEADERS_X_FRAME_OPTIONS=DENY
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=nosniff

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_TITLE=QuantaEnergi API
API_DOCS_DESCRIPTION=Next-Generation Energy Trading Platform API
API_DOCS_VERSION=4.0.0
API_DOCS_CONTACT_NAME=QuantaEnergi Support
API_DOCS_CONTACT_EMAIL=support@quantaenergi.com
API_DOCS_CONTACT_URL=https://quantaenergi.com/support

# Feature Flags
FEATURE_AGI_TRADING_ENABLED=true
FEATURE_QUANTUM_OPTIMIZATION_ENABLED=true
FEATURE_DIGITAL_TWIN_ENABLED=true
FEATURE_AUTONOMOUS_TRADING_ENABLED=true
FEATURE_BLOCKCHAIN_TRADING_ENABLED=true
FEATURE_CARBON_TRADING_ENABLED=true
FEATURE_MARKET_INTELLIGENCE_ENABLED=true

# Maintenance Mode
MAINTENANCE_MODE_ENABLED=false
MAINTENANCE_MODE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_MODE_ALLOWED_IPS=["127.0.0.1", "::1"]

# Testing Settings
TESTING_MODE_ENABLED=false
TESTING_MOCK_EXTERNAL_APIS=false
TESTING_MOCK_BLOCKCHAIN=false
TESTING_MOCK_QUANTUM=false

# Development Overrides (set to false in production)
DEV_MODE_ENABLED=false
DEV_MOCK_DATABASE=false
DEV_MOCK_REDIS=false
DEV_MOCK_EXTERNAL_SERVICES=false
