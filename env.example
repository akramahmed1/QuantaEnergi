# EnergyOpti-Pro Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS FOR EXTERNAL SERVICES
# =============================================================================

# CME Group API (Energy Trading)
CME_API_KEY=your_cme_api_key_here
CME_API_SECRET=your_cme_secret_here

# ICE (Intercontinental Exchange) API
ICE_API_KEY=your_ice_api_key_here
ICE_API_SECRET=your_ice_secret_here

# NYMEX (Natural Gas & Oil Futures)
NYMEX_API_KEY=your_nymex_api_key_here
NYMEX_API_SECRET=your_nymex_secret_here

# OpenWeatherMap API (Weather Data)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/energyopti_pro
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=energyopti_pro
DATABASE_USER=energyopti_user
DATABASE_PASSWORD=your_secure_password_here

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Post-Quantum Cryptography
KYBER_SECRET_KEY=your_kyber_secret_key_here
OQS_ENABLED=true

# API Security
API_KEY_HEADER=X-API-Key
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_BURST=200

# =============================================================================
# AI/ML SERVICES
# =============================================================================

# OpenAI (for advanced analytics)
OPENAI_API_KEY=your_openai_api_key_here

# TensorFlow Serving
TENSORFLOW_SERVING_URL=http://localhost:8501

# Prophet Forecasting
PROPHET_MODEL_PATH=/models/prophet

# =============================================================================
# EXCHANGE INTEGRATIONS
# =============================================================================

# PJM (Pennsylvania-New Jersey-Maryland)
PJM_API_KEY=your_pjm_api_key_here
PJM_API_SECRET=your_pjm_secret_here

# EEX (European Energy Exchange)
EEX_API_KEY=your_eex_api_key_here
EEX_API_SECRET=your_eex_secret_here

# Nord Pool (Nordic Power Market)
NORD_POOL_API_KEY=your_nord_pool_api_key_here
NORD_POOL_API_SECRET=your_nord_pool_secret_here

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox  # or 'live' for production

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@energyopti-pro.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here
APNS_PRIVATE_KEY_PATH=/path/to/your/apns/private/key.p8

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Prometheus (Metrics)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/logs/energyopti_pro.log

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "https://energyopti-pro.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_QUANTUM_COMPUTING=true
ENABLE_BLOCKCHAIN_TRADING=true
ENABLE_ISLAMIC_FINANCE=true
ENABLE_ESG_TRACKING=true
ENABLE_IOT_INTEGRATION=true

# =============================================================================
# REGIONAL COMPLIANCE
# =============================================================================

# Middle East Compliance
ME_COMPLIANCE_ENABLED=true
ADNOC_INTEGRATION_ENABLED=true
SAUDI_VISION_2030_ENABLED=true

# US Compliance
US_COMPLIANCE_ENABLED=true
FERC_COMPLIANCE_ENABLED=true
CFTC_COMPLIANCE_ENABLED=true

# EU Compliance
EU_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
REMIT_COMPLIANCE_ENABLED=true

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=200

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Configuration
TESTING=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/energyopti_pro_test

# Mock External Services (for development)
MOCK_EXTERNAL_APIS=false
MOCK_EXCHANGE_DATA=false
MOCK_PAYMENT_PROCESSING=false

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum (for smart contracts)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here
ETHEREUM_CONTRACT_ADDRESS=your_contract_address_here

# Solana (for fast trading)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_solana_private_key_here
SOLANA_PROGRAM_ID=your_program_id_here

# =============================================================================
# QUANTUM COMPUTING
# =============================================================================

# IBM Quantum
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here
IBM_QUANTUM_BACKEND=ibmq_qasm_simulator

# Qiskit Configuration
QISKIT_ENABLED=true
QISKIT_MAX_SHOTS=1000
QISKIT_OPTIMIZATION_LEVEL=3
