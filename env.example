# ðŸš€ EnergyOpti-Pro Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production
ISSUER=energyopti-pro
AUDIENCE=energyopti-pro-users

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/energyopti_pro
REDIS_URL=redis://localhost:6379

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
CME_API_KEY=your_cme_api_key_here
ICE_API_KEY=your_ice_api_key_here
NYMEX_API_KEY=your_nymex_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# =============================================================================
# QUANTUM COMPUTING SETTINGS
# =============================================================================
QUANTUM_SECURITY_ENABLED=false
QUANTUM_HARDWARE_ENABLED=false
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here
IBM_QUANTUM_URL=https://us-east.quantum-computing.cloud.ibm.com

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
GENERATIVE_AI_ENABLED=false
GROK_API_KEY=your_grok_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIMIZATION ENGINE SETTINGS
# =============================================================================
OPTIMIZATION_ENGINE_ENABLED=true
OPTIMIZATION_TIMEOUT=300
OPTIMIZATION_MAX_ITERATIONS=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================
# Render (Backend)
RENDER_TOKEN=your_render_token_here
RENDER_SERVICE_ID=your_render_service_id_here

# Vercel (Frontend)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@energyopti-pro.com

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://your-domain.vercel.app"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SESSION SETTINGS
# =============================================================================
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600  # 1 hour
