# QuantaEnergi Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/quantaenergi
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys
CME_API_KEY=your-cme-api-key
ICE_API_KEY=your-ice-api-key
WEATHER_API_KEY=your-weather-api-key

# External Services
MQTT_BROKER_URL=mqtt://localhost:1883
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Security
ENCRYPTION_KEY=your-encryption-key-32-chars-long
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Monitoring
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO